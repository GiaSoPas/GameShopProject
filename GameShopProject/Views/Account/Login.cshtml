@model GameShopProject.ViewModels.LoginModel

@{
    ViewBag.Title = "Войти";
    Layout = "_Layout";
}

<br>
<h2>Вход на сайт</h2>
<br>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="w-50 p-3">
        <div class="form-floating mb-3">
            <input type="email" class="form-control" asp-for="Email" id="floatingInput" placeholder="name@example.com"/>
            <label for="floatingInput" asp-for="Email">Введите Email</label>
            <span class="badge rounded-pill bg-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" asp-for="Password" id="floatingInput" placeholder="password"/>
            <label for="floatingInput" asp-for="Password">Введите пароль</label>
            <span class="badge rounded-pill bg-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
        <br/>
        <p class="text-muted">Все еще нет аккаунта? <a class="text-reset" asp-action="Register" asp-controller="Account">Регистрация</a></p>
    </div>
</form>