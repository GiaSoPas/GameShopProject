@model GameShopProject.ViewModels.CreateUpdateGameModel

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<section class="content-header">
    <h1>
    Games
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Update Games</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form class="form-horizontal" asp-action="UpdateGame" asp-controller="Admin">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="box-body">
            <div class="form-group">
                <label for="inputEmail3" asp-for="Name" class="col-sm-2 control-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Name" class="form-control" name="Name" placeholder="Name" value="@Model.Name">
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" asp-for="Price" class="col-sm-2 control-label">Price</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Price" class="form-control" name="Price" placeholder="Price" value="@Model.Price">
                </div>
            </div>
            <div class="form-group">
                <label for="inputEmail3" asp-for="Description" class="col-sm-2 control-label">Description</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="Description" class="form-control" name="Description" placeholder="Description" value="@Model.Description">
                </div>
            </div>
            <input type="hidden" name="Id" value="@Model.Id"/>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-default" asp-controller="Admin" asp-action="Index">Cancel</button>
            <button type="submit" class="btn btn-info pull-right" asp-action="UpdateGame" asp-controller="Admin">Update</button>
        </div>
        <!-- /.box-footer -->
    </form>
    </div>
    <!-- /.box -->
</section>
